# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Trading Configuration
MIN_CONFIDENCE_THRESHOLD=70
MAX_ACTIVE_TRADES_PER_ASSET=3
SIGNAL_GENERATION_INTERVAL=900000  # 15 minutes in milliseconds
AI_OPTIMIZATION_INTERVAL=3600000   # 1 hour in milliseconds

# Market Data
DATA_UPDATE_INTERVAL=5000          # 5 seconds in milliseconds
OHLCV_LIMIT=100                    # Number of candles to fetch

# Risk Management
DEFAULT_STOP_LOSS_PERCENT=1.0
DEFAULT_TAKE_PROFIT_PERCENT=2.0
MAX_RISK_PER_TRADE_PERCENT=2.0

# AI Configuration
AI_LEARNING_RATE=0.01
AI_PERFORMANCE_DAYS=30
AI_MIN_TRADES_FOR_OPTIMIZATION=5

# Exchange Configuration (if using real trading)
# EXCHANGE_API_KEY=your_api_key_here
# EXCHANGE_SECRET=your_secret_here
# EXCHANGE_SANDBOX=true

# Database Configuration (if using external database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=trading_signals
# DB_USER=username
# DB_PASSWORD=password

# Redis Configuration (if using Redis for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000        # 30 seconds
WS_MAX_RECONNECT_ATTEMPTS=5

# Security
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000           # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100        # Max requests per window 